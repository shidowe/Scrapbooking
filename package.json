{
  "name": "template",
  "version": "0.0.1",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --config client/webpack.config.js",
    "build:server": "tsc -p server/tsconfig.json",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "webpack serve --config client/webpack.config.js",
    "dev:server": "ts-node-dev --respawn --transpile-only --project server/tsconfig.json server/src/index.ts",
    "start": "node server/dist/index.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "turbodombuilder": "^0.9.38"
  }
}
